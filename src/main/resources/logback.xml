<!-- Ref:
 Medium:
 https://medium.com/devdomain/logging-in-java-slf4j-logback-and-log4j-explained-f69bf68df796

 Learning:
 Name the file correctly
 - Spring Boot only auto-loads certain file names for Logback:
     - spring-logback.xml -> X (Won't be picked)
     - logback-spring.xml -> Y (Correct)
 - If your file is named anything else or located elsewhere, it wonâ€™t be picked up automatically.

 FIX:
 - RENAME your file from 'spring-logback.xml' to 'logback-spring.xml' and place it in:
     - src/main/resources/logback-spring.xml
 -->

<configuration>  <!-- debug="true" -->

    <!-- Console Appender -->
    <appender name="order_events_console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender with Rolling Policy -->
    <appender name="order_events_file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/kafka_order_events.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/app-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory> <!-- Keep logs for the last 30 days -->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Capturing only logs generated by the specified package/classes to the log file -->
    <logger name="com.project.ecom.kafka.consumers" level="INFO" additivity="true">
        <appender-ref ref="order_events_file" />
    </logger>

    <!-- Root Logger -->
    <root level="info">
        <appender-ref ref="order_events_console" />
        <!-- DISABLED:
        Because the intention is to capture logs generated by the specified classes/package.
        If enabled, root logger will send logs generated by all the classes to the file (including kafka internal logs).

        <appender-ref ref="order_events_file" />
        -->
    </root>
</configuration>